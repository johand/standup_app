<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1 class="m-0 text-dark">Event Integration</h1>
      </div>
    </div>
  </div>
</div>

<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-9 offset-sm-1">
        <div class="card">
          <div class="card-header">
            <h3 class="card-title with-border">
              GitHub
            </h3>
          </div>

          <div class="card-body">
            <p>
              Associate GitHub commit and pull request events into Standup App, setup per team.
            </p>

            <% unless @github %>
              <%= link_to 'Install GitHub Integration',
                   user_github_omniauth_authorize_path,
                   class: 'btn btn-primary', method: :post %>
            <% else %>
              <div class="row">
                <div class="col-lg-12">
                  <p>
                    GitHub installed with access to repos:
                  </p>

                  <div class="card card-body bg-light">
                    <%= @grepos.join(', ') %>
                  </div>

                  <p>
                    You can setup teams individually to follow repo activity
                    <br/>

                    <%= link_to 'Remove GitHub integration',
                     remove_integrations_path('github'),
                     { class: 'btn btn-danger', method: :delete,
                       data: { confirm: 'Are you sure? Deleting is permanent' } } %>
                  </p>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
