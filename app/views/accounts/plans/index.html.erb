<div class="content-header">
  <div clAccountsass="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1 class="m-0 text-dark">Select A Plan</h1>
      </div>
    </div>
  </div>
</div>

<section class="content">
  <div class="container-fluid">
    <div class="row">
      <% @plans.each do |plan| %>
        <div class="col-lg-3 <%= "#{'offset-lg-1' if plan == @plans.first}" %>">
          <div class="card">
            <div class="card-header">
              <div class="float-right">
                <h2><%= Money.new(plan.amount, 'USD').format %></h2>
              </div>

              <h3 class="card-title"><%= plan.human_name %></h3>
            </div>

            <div class="card-body">
              <a class="btn btn-primary btn-block" href="<%= new_user_registration_path(plan: plan.stripe_id) %>" style="margin: 10px 0px">
                <h4>Select Plan</h4>
              </a>

              <p>
                <strong><%= plan.users %> users</strong>
              </p>

              <p>
                <strong><%= plan.teams %> teams</strong>
              </p>

              <p>
                <%= plan.integrations ? 'Allows' : "Doesn't Allow" %> Integrations
              </p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
